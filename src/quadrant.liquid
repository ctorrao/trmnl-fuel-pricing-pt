{% assign stations = sorted_stations | slice: 0, 4 %}
{% assign municipio_name = resultado.first.Municipio | upcase %}
{% assign distrito_name = resultado.first.Distrito | upcase %}
{% assign combustivel_name = resultado.first.Combustivel | upcase %}

<div style="{{ base_font }} padding: 5px;">
  <div class="text--center" style="font-size: 22px; font-weight: bold; margin-bottom: 5px; border-bottom: 2px solid black; padding-bottom: 3px;">
    {{ combustivel_name }}
  </div>
  <div class="text--center" style="font-size: 16px; margin-bottom: 5px;">
    {{ distrito_name }} / {{ municipio_name }}
  </div>
  
  {% if stations.size > 0 %}
    
    <table style="width: 100%; font-size: 13px; border-collapse: collapse;">
      <thead>
        <tr class="bg--gray-60" style="border-bottom: 1px solid black;">
          <th class="text--left" style="padding: 2px; font-weight: bold;">#</th>
          <th class="text--left" style="padding: 2px; font-weight: bold;">POSTO</th>
          <th class="text--right" style="padding: 2px; font-weight: bold;">PREÃ‡O</th>
        </tr>
      </thead>
      <tbody>
        {% for station in stations %}
          <tr style="border-bottom: 1px solid #999;">
            <td style="padding: 2px; font-weight: bold;">{{ forloop.index }}</td>
            <td style="padding: 2px;">
              <div style="font-weight: bold; font-size: 13px;">{{ station.Marca }}</div>
              <div style="font-size: 12px;">{{ station.Localidade | truncate: 20 }}</div>
            </td>
            <td class="text--right" style="padding: 2px; font-weight: bold; font-size: 15px;">{{ station.Preco }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    
  {% else %}
    <div class="text--center" style="padding: 15px; font-size: 16px; border: 2px solid black;">
      ERRO AO CARREGAR DADOS DA API
    </div>
  {% endif %}
</div>

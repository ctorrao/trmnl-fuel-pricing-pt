{% assign stations = sorted_stations | slice: 0, 10 %}
{% assign municipio_name = resultado.first.Municipio | upcase %}
{% assign distrito_name = resultado.first.Distrito | upcase %}
{% assign combustivel_name = resultado.first.Combustivel | upcase %}

<div style="{{ base_font }} padding: 8px;">
  <div class="text--center" style="font-size: 24px; font-weight: bold; margin-bottom: 12px; border-bottom: 3px solid black; padding-bottom: 6px;">
    {{ combustivel_name }} - {{ distrito_name }} / {{ municipio_name }}
  </div>

  {% if stations.size > 0 %}
    <div style="font-size: 14px; margin-bottom: 6px; font-weight: bold;">
      Top 10 Mais Baratos
    </div>
    
    <table style="width: 100%; font-size: 13px; border-collapse: collapse;">
      <thead>
        <tr style="border-bottom: 2px solid black; background: #e0e0e0;">
          <th class="text--left" style="padding: 4px; font-weight: bold;">#</th>
          <th class="text--left" style="padding: 4px; font-weight: bold;">POSTO</th>
          <th class="text--left" style="padding: 4px; font-weight: bold;">MARCA</th>
          <th class="text--left" style="padding: 4px; font-weight: bold;">LOCALIDADE</th>
          <th class="text--left" style="padding: 4px; font-weight: bold;">PREÇO</th>
          <th class="text--left" style="padding: 4px; font-weight: bold;">ATUALIZ.</th>
        </tr>
      </thead>
      <tbody>
        {% for station in stations %}
          <tr style="border-bottom: 1px solid #999;">
            <td style="padding: 4px; font-weight: bold;">{{ forloop.index }}</td>
            <td style="padding: 4px;">{{ station.Nome | truncate: 35 }}</td>
            <td style="padding: 4px;">{{ station.Marca | truncate: 12 }}</td>
            <td style="padding: 4px;">{{ station.Localidade | truncate: 30 }}</td>
            <td class="text--right" style="padding: 4px; font-weight: bold; font-size: 14px;">{{ station.Preco }}</td>
            <td class="text--center" style="padding: 4px; font-size: 12px;">{{ station.DataAtualizacao | date: "%d %b" }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    
    <div style="margin-top: 8px; padding: 6px; border: 2px solid black; font-size: 14px; font-weight: bold;">
      POUPANÇA MÁXIMA: {{ price_difference | round: 3 }}€/litro ({{ cheapest_station.Marca }} vs {{ most_expensive_station.Marca }})
    </div>
    
  {% else %}
    <div class="text--center" style="padding: 40px; font-size: 16px; border: 2px solid black;">
      ERRO AO CARREGAR DADOS DA API<br>
      <div style="font-size: 12px; margin-top: 10px;">
        Debug: markup size = {{ markup.size }}<br>
        status = {{ markup.status }}<br>
        resultado size = {{ markup.resultado.size }}
      </div>
    </div>
  {% endif %}
</div>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
  <span class="instance">Atualizado: {{ "now" | date: "%d-%m-%Y %H:%M" }}</span>
</div>
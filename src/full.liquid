{% assign stations = sorted_stations | slice: 0, 10 %}
{% assign municipio_name = resultado.first.Municipio | upcase %}
{% assign distrito_name = resultado.first.Distrito | upcase %}
{% assign combustivel_name = resultado.first.Combustivel | upcase %}

<div class="p--2" style="{{ base_font }}">
  <div class="text--center text--2xl mb--3 pb--1.5" style="font-weight: bold; border-bottom: 3px solid black;">
    {{ combustivel_name }} - {{ distrito_name }} / {{ municipio_name }}
  </div>

  {% if stations.size > 0 %}
    <div class="text--sm mb--1.5" style="font-weight: bold;">
      Top 10 Mais Baratos
    </div>
    
    <table class="text--sm" style="width: 100%; border-collapse: collapse;">
      <thead>
        <tr class="bg--gray-60" style="border-bottom: 2px solid black;">
          <th class="text--left p--1" style="font-weight: bold;">#</th>
          <th class="text--left p--1" style="font-weight: bold;">POSTO</th>
          <th class="text--left p--1" style="font-weight: bold;">MARCA</th>
          <th class="text--left p--1" style="font-weight: bold;">LOCALIDADE</th>
          <th class="text--left p--1" style="font-weight: bold;">PREÇO</th>
          <th class="text--left p--1" style="font-weight: bold;">ATUALIZ.</th>
        </tr>
      </thead>
      <tbody>
        {% for station in stations %}
          <tr style="border-bottom: 1px solid #999;">
            <td class="p--1" style="font-weight: bold;">{{ forloop.index }}</td>
            <td class="p--1">{{ station.Nome | truncate: 35 }}</td>
            <td class="p--1">{{ station.Marca | truncate: 12 }}</td>
            <td class="p--1">{{ station.Localidade | truncate: 30 }}</td>
            <td class="text--right text--sm p--1" style="font-weight: bold;">{{ station.Preco }}</td>
            <td class="text--center text--xs p--1">{{ station.DataAtualizacao | date: "%d %b" }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    
    <div class="text--sm mt--2 p--1.5" style="border: 2px solid black; font-weight: bold;">
      POUPANÇA MÁXIMA: {{ price_difference | round: 3 }}€/litro ({{ cheapest_station.Marca }} vs {{ most_expensive_station.Marca }})
    </div>
    
  {% else %}
    <div class="text--center text--base p--10" style="border: 2px solid black;">
      ERRO AO CARREGAR DADOS DA API<br>
      <div class="text--xs mt--2.5">
        Debug: markup size = {{ markup.size }}<br>
        status = {{ markup.status }}<br>
        resultado size = {{ markup.resultado.size }}
      </div>
    </div>
  {% endif %}
</div>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
  <span class="instance">Atualizado: {{ "now" | date: "%d-%m-%Y %H:%M" }}</span>
</div>